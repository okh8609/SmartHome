<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <TextView
        android:id="@+id/client_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:text="智能家電控制"
        android:textColor="#005AB5"
        android:textSize="32dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/client_title"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".15"
                    android:padding="10dp"
                    android:text="伺服器號碼"
                    android:textColor="#003060"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/server_phoneNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:text="0912778955"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/sms_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D2E9FF"
                    android:text="TEST"
                     />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/once"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="單次"
                    android:textSize="26dp" />


                <LinearLayout
                    android:id="@+id/once_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/once_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="#D2E9FF"
                        android:padding="10dp"
                        android:text="開啟"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/once_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="#D2E9FF"
                        android:padding="10dp"
                        android:text="關閉"
                        android:textSize="20dp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/prid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="時段"
                    android:textSize="26dp" />

                <RelativeLayout
                    android:id="@+id/prid_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/l1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:text="開啟"
                        android:textColor="#003060"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/prid_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/l1"
                        android:ems="5"
                        android:inputType="number" />

                    <Spinner
                        android:id="@+id/prid_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/prid_time"
                        android:entries="@array/unit_array"
                        android:theme="@style/myCustomSpinner" />

                    <TextView
                        android:id="@+id/l2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/prid_spinner"
                        android:padding="10dp"
                        android:text="後關閉"
                        android:textColor="#003060"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/prid_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l2"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:background="#D2E9FF"
                        android:padding="10dp"
                        android:text="GO !"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RadioButton
                    android:id="@+id/rept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="重複"
                    android:textSize="26dp" />

                <LinearLayout
                    android:id="@+id/rept_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/l3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:text="每開啟"
                            android:textColor="#003060"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/rept_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/l3"
                            android:ems="5"
                            android:inputType="number" />

                        <Spinner
                            android:id="@+id/rept_spinner1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rept_time1"
                            android:entries="@array/unit_array"
                            android:theme="@style/myCustomSpinner" />

                        <TextView
                            android:id="@+id/l4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_toRightOf="@id/rept_spinner1"
                            android:padding="10dp"
                            android:text="後"
                            android:textColor="#003060"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/l5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l3"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:text="會關閉"
                            android:textColor="#003060"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/rept_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l3"
                            android:layout_toRightOf="@+id/l5"
                            android:ems="5"
                            android:inputType="number" />

                        <Spinner
                            android:id="@+id/rept_spinner2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l3"
                            android:layout_toRightOf="@+id/rept_time2"
                            android:entries="@array/unit_array"
                            android:theme="@style/myCustomSpinner" />

                        <TextView
                            android:id="@+id/l6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l3"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_toRightOf="@id/rept_spinner2"
                            android:padding="10dp"
                            android:text="."
                            android:textColor="#003060"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/rept_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l6"
                            android:layout_alignParentRight="true"
                            android:layout_margin="20dp"
                            android:background="#D2E9FF"
                            android:padding="10dp"
                            android:text="GO !"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>

                <RadioButton
                    android:id="@+id/scdl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="排程"
                    android:textSize="26dp" />

                <LinearLayout
                    android:id="@+id/scdl_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/l7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="16dp"
                        android:text="星期"
                        android:textColor="#003060"
                        android:textSize="20dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/week1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n一" />

                            <CheckBox
                                android:id="@+id/week2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n二" />

                            <CheckBox
                                android:id="@+id/week3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n三" />

                            <CheckBox
                                android:id="@+id/week4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n四" />

                            <CheckBox
                                android:id="@+id/week5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n五" />

                            <CheckBox
                                android:id="@+id/week6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n六" />

                            <CheckBox
                                android:id="@+id/week7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="\n日" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/scdl_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:text="AM 00:00"
                            android:textColor="#444444"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"

                            android:text="~"
                            android:textColor="#003060"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/scdl_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:text="AM 00:00"
                            android:textColor="#444444"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:text="會開啟"
                            android:textColor="#003060"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/scdl_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="20dp"
                            android:background="#D2E9FF"
                            android:padding="10dp"
                            android:text="GO !"
                            android:textSize="20dp" />
                    </RelativeLayout>

                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>